import { h, createState } from 'skara-js';

export function App() {
  const count = createState(0);

  const increment = () => count.set(count.get() + 1);
  const decrement = () => count.set(count.get() - 1);

  return h('div', { className: 'app' },
    h('header', { className: 'app-header' },
      h('h1', null, '🏛️ Welcome to Skara.js'),
      h('p', null, 'Built from ancient wisdom, powered by modern technology')
    ),
    h('main', { className: 'app-main' },
      h('div', { className: 'counter' },
        h('h2', null, 'Counter Example'),
        h('div', { className: 'counter-display' },
          h('span', { className: 'count-value' }, count.get())
        ),
        h('div', { className: 'counter-buttons' },
          h('button', { 
            onClick: decrement,
            className: 'counter-btn decrement'
          }, '-'),
          h('button', { 
            onClick: increment,
            className: 'counter-btn increment'
          }, '+')
        )
      )
    ),
    h('footer', { className: 'app-footer' },
      h('p', null, 'Edit src/App.ssx and save to reload.'),
      h('p', null, 'Like Skara Brae, built to last through the ages! 🏛️')
    )
  );
}